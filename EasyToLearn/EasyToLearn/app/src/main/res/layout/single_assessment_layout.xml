<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingBottom="@dimen/dp_3">

            <ImageView
                android:id="@+id/ivAssessImage"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_100"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/physicsone" />

            <TextView
                android:id="@+id/tvAssessName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivAssessImage"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:text="e2lassessment 1"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_20" />

            <LinearLayout
                android:id="@+id/questionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAssessName"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:id="@+id/tvQueCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Questions ,"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dp_16" />

                <TextView
                    android:id="@+id/tvAnswerCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="5 Minutes"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dp_16" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvStartQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/questionLayout"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="@dimen/dp_3"
                android:background="@drawable/bg_quiz"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:text="Start Quiz"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_16" />
        </RelativeLayout>
    </RelativeLayout>

</layout>