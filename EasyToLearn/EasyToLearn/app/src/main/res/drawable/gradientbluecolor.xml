<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#E1E2E4" />
            <corners android:radius="90dp"></corners>
            <gradient
                android:type="linear"
                android:startColor="#8A5EE3"
                android:centerColor="#445AE6"
                android:endColor="#A07CE8"
                android:centerX="0.5"
                android:centerY="0.5"
                android:angle="45"/>
        </shape>
    </item>
</selector>