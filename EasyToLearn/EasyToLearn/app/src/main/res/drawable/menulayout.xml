<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#7D4BE3"
                android:startColor="#A526C6"/>
            <stroke
                android:width="1dp"
                android:color="#3C09A5"/>

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>

    </item>
    <item>

        <shape>
            <solid
                android:color="#BDA3F3"/>
            <stroke
                android:width="1dp"
                android:color="#5C1A6E"/>

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>