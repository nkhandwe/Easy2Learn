<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_background"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/posi"
                android:textColor="@color/black"
                android:layout_marginTop="6dp"
                android:paddingLeft="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type"
                android:layout_toRightOf="@id/posi"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/black"
                android:text="14dp"/>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_turned_in_not_black_24dp"
            android:layout_gravity="end"
            android:layout_alignParentRight="true"
            android:id="@+id/bookmark"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"/>
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/ic_turned_in_black_24dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:id="@+id/bookmarkD"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"/>
        </RelativeLayout>
        <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/question"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="How to find the equivalent fraction?"
            android:textColor="@color/violet"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="WebViewLayout" />

        <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:id="@+id/answer"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="&#8226; To find the equivalent fraction proper and improper fraction we have the both multiply with numerator or deenominator in same number."
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:ignore="WebViewLayout" />
    </LinearLayout>
</layout>